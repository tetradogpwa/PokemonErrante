@using System.Drawing

<img class="@Class" src="@ImgSrc" @onclick="@OnClick" />

@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public Bitmap Imagen { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
    string ImgSrc
    {
        get
        {
            return Imagen.ToSrcImg();
        }
    }

}
