@typeparam  T
    <div class="@ClassList">
        @if (Items != null)
        {
            @if (Items.Count == 0)
            {
                <text>No hay pokemon a mostrar</text>
            }
            else
            {
                @for (int i = First, j = 0; j < NumeroAVer&&i+j<Items.Count; j++, i++)
                {
                    <VisorBitmap Value="@(ConvertToBitmap(Items[i]))" OnClick="@(()=>OnClick.InvokeAsync(Items[i]))"  Class="@ClassItem" />
                }
            }
        }
        else
        {
            <text>Es necesario poner una lista de pokemon</text>
        }

    </div>
@code {
    [Parameter]public EventCallback<T> OnClick { get; set; }
    [Parameter] public IList<T> Items { get; set; }
    [Parameter] public GetBitmap<T> ConvertToBitmap { get; set; }
    [Parameter] public int NumeroAVer { get; set; } = 1;
    [Parameter] public int First { get; set; } = 0;
    [Parameter] public string ClassList { get; set; } = "";
    [Parameter] public string ClassItem { get; set; } = "";
}
