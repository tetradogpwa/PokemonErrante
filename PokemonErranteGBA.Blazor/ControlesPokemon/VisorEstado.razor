<img class="@Class" src="@SrcImg" @onclick="@(()=>{Seleccionado=!Seleccionado;  OnClick.InvokeAsync(Seleccionado);})"/>

@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public PokemonGBAFrameWork.PokemonErrante.Pokemon.Stat Estado { get; set; }
    [Parameter]public EventCallback<bool> OnClick { get; set; }
    [Parameter]public bool Seleccionado { get; set; }
    string SrcImg
    {
        get
        {
            string strSeleccionado = Seleccionado ? "" : "-Off";
            return $"~/Imagenes/{Estado.ToString()}{strSeleccionado}.png";

        }
    }

}
